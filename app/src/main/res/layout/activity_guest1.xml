<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guest1">

    <Button
        android:id="@+id/visitor"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_below="@id/search"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:backgroundTint="#56DF38"
        android:gravity="center"
        android:onClick="visitor"
        android:text="Vistor Pass "
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <Button
        android:onClick="visits"
        android:id="@+id/myvisitors"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:textColor="#FFF"
        android:background="@drawable/button"
        android:backgroundTint="#303F9F"
        android:gravity="center"
        android:text="My visit"
        android:textSize="25sp"
        android:layout_below="@id/visitor"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"/>

    <Button
        android:onClick="events"
        android:id="@+id/event"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_below="@id/myvisitors"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/button"
        android:backgroundTint="#FFA000"
        android:gravity="center"
        android:text="Events"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <Button
        android:onClick="timelogs"
        android:id="@+id/Timelogs"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_below="@id/event"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/button"
        android:backgroundTint="#7B1FA2"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="Timelogs"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <SearchView
        android:id="@+id/search"
        android:layout_below="@id/imageView6"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/menu"
        >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="0.0"
            >

            <Button
                android:onClick="home"
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/home"
                android:layout_weight=".1"
                android:layout_gravity="left"
                />
            <Button
                android:onClick="alerts"
                android:id="@+id/alerts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/alerts"
                android:layout_weight=".1"
                android:layout_gravity="center"
                />

            <Button
                android:onClick="events"
                android:id="@+id/events"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/eventss"
                android:layout_weight=".1"
                android:layout_gravity="right"/>
            <Button
                android:onClick="help"
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/help"
                android:layout_weight=".1"
                android:layout_gravity="end"
                />

        </LinearLayout>

    </RelativeLayout>



    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/vmslogo_1" />

</RelativeLayout>